.content {
  width: 100%;
}
/* 搜索框 */
.search-box {
  display: flex;
  justify-content: space-around;
}
.srarch_img {
  width: 40rpx;
  height: 40rpx;
  margin-top: 2.5vh;
}
.srarch_img1 {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 2vh;
  left: 60vw;
}
.search-inner {
  /* 圆角 */
  -webkit-border-radius: 0.5em;
  -moz-border-radius: 0.5em;
  border-radius: 0.5em;
}
.search-cont {
  width: 95%;
  font-size: 24rpx;
}
/* 头部 的 切换 按钮 */
.type-navbar {
  display: flex;
  background-color: #fff;
  margin-top: 2vh;
  border-bottom: 1rpx solid #e6e6e6;
  padding-bottom: 1vh;
  justify-content: center;
}
.type-box {
  width: 30%;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 76rpx;
  padding: 0 20rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.type-navbar-item {
  border-bottom: 4rpx solid #fff;
}

.type-item-on {
  font-size: 21 !important;
  font-weight: 700;
  color: #0486f4;
  position: relative;
}
.type-item-on::after {
  content: "";
  width: 60px;
  height: 3px;
  color: #0486f4 !important;
  background: #0486f4;
  border-radius: 2px;
  position: absolute;
  bottom: -2px;
  left: 50%;
  -webkit-transform: translateX(-50%);
  -ms-transform: translateX(-50%);
  transform: translateX(-50%);
}
/* 筛选 */
.nav {
  height: 10vh;
}
.nav-item {
  float: left;
  width: 32.5%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-bottom: 1px solid #f8f8f8;
  background-color: #fff;
}
.nav-item .ico-dg {
  width: 18rpx;
  height: 12rpx;
  margin-left: 10rpx;
  line-height: 0;
}
.nav-item .ico-filter {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
  line-height: 0;
}
.ico-dir {
  width: 16rpx;
  height: 22rpx;
  margin-left: 10rpx;
  background-repeat: no-repeat;
  background-size: cover;
  background-position-x: 0;
}
.ico-dir-dn {
  background-position-x: -16rpx;
}
.ico-dir-up {
  background-position-x: -32rpx;
}
.nav-search {
  width: 10%;
}
.nav-item .search-img {
  width: 30rpx;
  height: 30rpx;
}
