                                    <text class="wenzi1">主面料：</text>
                                    <text>M20001/丝光棉</text>
                                </view>
                            </view>
                            <view>
                                <view>
                                    <text class="wenzi1">设计款号：</text>
                                    <text>KX2020020010</text>
                                </view>
                                <view>
                                    <text class="wenzi1">客户/品牌：</text>
                                    <text>歌莉娅</text>
                                </view>
                                <view>
                                    <text class="wenzi1">下单人：</text>
