                            <text>36%再生纤维素纤维36%聚酯纤维28%棉</text>
                        </view>
                        <view class="content_1_2">
                            <text class="wenzi1">二次工艺：</text>
                            <text>打揽/压褶</text>
                        </view>
                    </view>
                </view>
            </view>
            <!-- 详情 -->
            <view class="mater_text" hidden="{{activeCategoryId==1?false:true}}">
                <view class="content_2">
                    <!-- 产能 -->
                    <view class="xdmx">产能：</view>
                    <view class="channeng">
                        <view class="textb">
                            <text class="labelb">可能产能:</text>
                            <input placeholder="请输入..." class="inputb" type="text" name="store_name" bindinput="onInputDes" value="{{inputDes}}" />
                        </view>
                        <view class="textb1">
                            <text class="labelb">计划复期:</text>
                            <text style="color:red;">*</text>
                            <picker mode="date" value="{{date}}" bindchange="changeDate">
                                <view class="tui-picker-detail">{{date}}</view>
                            </picker>
                        </view>
                    </view>
                    <!-- 下单明细 -->
                    <view class="xdmx">下单明细：</view>
                    <view class='table'>
                        <view class='table_header'>
                            <view class="th" style='width:199rpx;'>
                                <view class='cell_label'>颜色</view>
                            </view>
                            <block>
                                <view class='th1'>
                                    <view class="cell_label ">尺码</view>
                                </view>
                                <view class='th'>
                                    <view class="cell_label ">订单数</view>
